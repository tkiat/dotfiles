source ~/.zshrc.shared
alias wpa="sudo wpa_supplicant -c /etc/wpa_supplicant.conf -i wlp0s29f7u2 -B"
alias dhc="sudo dhclient -v wlp0s29f7u2"
alias 2guix-garbage-collect="guix package --delete-generations && guix gc --collect-garbage"
alias 2gp="guix package"
alias 2guix-show-config="guix system describe | grep 'configuration file' | cut -d : -f 2 | xargs vim"
# applications
alias 2cam="ffplay -s 400x400 -alwaysontop -left 1000 -top 600 /dev/video0"
alias mupdf="mupdf-x11"
